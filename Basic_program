#include <iostream>
using namespace std;

int main() 
{
    // Variables for weight
   // Using double for decimal precision 
    double grams, pounds;

    // Get input from user
    cout << "Enter weight in grams: ";
    cin >> grams;

    // Convert to pounds (1 gram = 0.00220462 pounds)
    pounds = grams * 0.00220462;
    
    // Display result
    cout << grams << " grams is equal to " << pounds << " pounds." << endl;

    return 0;
}


#include <iostream>
using namespace std;

int main() {
    double diameter, radius, area;
    
    // This line is to constant the PI
    const double PI = 3.141592653589793;
    
    //This line to input the diameter
    cout<<"Enter the Diameter: ";cin>>diameter;
    
    //getting the radius
    radius = diameter / 2.0;
    
    //Calculation of the area it will calculate first the radius * radius
    area = PI * (radius * radius);
    
    //Output of the Calculation
    cout<<"The Area is: "<<area;
    
    
    return 0;
}



#include <iostream>
using namespace std;

int main()
{
		//Declaring variables	
	double speed, time, dist;
	
	
// line 11 12 13 inputs the digits of km and time
	cout<<"Speed Calculator "<<endl;
	cout<<"Enter Distance (km): ";cin>>dist;
	cout<<"Enter Time (hr): ";cin>>time;

//Calculates the speed
	speed = dist / time;

//Shows the output of the speed that calculates distance/time
	cout<<"The Speed of the Car is: "<<speed<<" km/h.";
	
	
	
	
	
	return 0;
}
